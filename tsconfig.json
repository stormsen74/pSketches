{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "sourceMap": true,
    "target": "ES6",
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings"
  ]
}